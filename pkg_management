# shellcheck disable=SC2148,SC1090,SC2068

source "${PWD}"/"$(dirname "$0")"/os > /dev/null 2>&1 || \
{ echo "$0: Unable to source \"os\"."  >&2; exit 1; }

install_pkg() {
echo -e "\nInstalling $*..."
case $(os) in
centos | fedora)
    yum -y install $@ || dnf -y install $@
    sleep 1
    ;;
ubuntu)
    apt update
    apt -y install $@
    sleep 1
    ;;
manjaro|arch*)
    pacman -Sy --noconfirm $@
    sleep 1
    ;;
esac
}