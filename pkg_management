# shellcheck disable=SC2148,SC1090,SC2068

source "${PWD}"/"$(dirname "$0")"/os > /dev/null 2>&1

install_pkg() {
echo -e "\nInstalling $*..."
case $(os) in
centos | fedora)
    yum -y install $@
    sleep 1
    ;;
ubuntu)
    apt update
    apt -y install $@
    sleep 1
    ;;
manjaro)
    pacman -Sy --noconfirm $@
    sleep 1
    ;;
esac
}