# shellcheck disable=SC2148,SC1090,SC2068

os() {
declare -r distro=$(grep -e '^ID=' /etc/os-release \
    | cut -d = -f 2 | sed -e 's/[[:punct:]]//g' \
    | tr "[:upper:]" "[:lower:]")
echo "$distro"
}

checkuser() {
[[ $UID == "0" ]] || { echo "You are not root."; exit 1; }
}

install_pkg() {
echo -e "\nInstalling $*..."
case $(os) in
    centos | fedora)
        yum -y install $@ || dnf -y install $@
        sleep 1
        ;;
    ubuntu)
        apt update
        for package in $@; do
            apt -y install "$package"
        done
        sleep 1
        ;;
    manjaro|arch*)
        pacman -Sy --noconfirm $@
        sleep 1
        ;;
esac
}