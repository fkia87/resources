# shellcheck disable=SC2148

# Usage: loading & loading_pid="$!"
loading() {
    tput civis
    while true; do
        for char in "â ‹" "â ™" "â ¹" "â ¸" "â ¼" "â ´" "â ¦" "â §" "â ‡" "â " ; do
            echo -en "\b$char"
            sleep .07
        done
    done
}
export -f loading

