# Usage: stop_loading <loading_pid> [finish_message]
stop_loading() {
    kill -9 "$1" && wait > /dev/null 2>&1
    echo -ne "\033[2K\r"
    [[ -n "$2" ]] && echo -e "$2"
    tput cnorm
}
export -f stop_loading